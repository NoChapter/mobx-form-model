{
  "name": "module-starter",
  "version": "1.0.0",
  "description": "用于编写 node 的模块的脚手架",
  "main": "lib/index.js",
  "scripts": {
    "watch": "webpack --watch",
    "build": "babel src --out-dir lib  --compact=false --ignore=*.spec.js",
    "test": "mocha --compilers js:babel-core/register src/**/*.spec.js",
    "test-cov": "cross-env NODE_ENV=test nyc --reporter=lcov mocha src/**/*.spec.js && opn coverage/lcov-report/index.html"
  },
  "repository": {
    "type": "git",
    "url": "http://git.code.oa.com/zixun/module-starter.git"
  },
  "keywords": [
    "starter"
  ],
  "author": "edvardchen",
  "license": "ISC",
  "devDependencies": {
    "babel-core": "^6.13.2",
    "babel-eslint": "^7.0.0",
    "babel-loader": "^6.2.4",
    "babel-plugin-istanbul": "^2.0.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-es2015": "^6.13.2",
    "babel-register": "^6.11.6",
    "cross-env": "^2.0.1",
    "eslint": "^3.2.2",
    "eslint-config-airbnb": "^10.0.0",
    "eslint-loader": "^1.5.0",
    "eslint-plugin-import": "^1.12.0",
    "eslint-plugin-jsx-a11y": "^2.0.1",
    "eslint-plugin-react": "^6.0.0",
    "mocha": "^3.0.2",
    "nyc": "^8.1.0",
    "opn-cli": "^3.1.0",
    "should": "^10.0.0",
    "webpack": "^1.13.1",
    "webpack-node-externals": "^1.3.3"
  },
  "nyc": {
    "sourceMap": false,
    "instrument": false,
    "require": [
      "babel-register"
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.js"
    ]
  }
}
