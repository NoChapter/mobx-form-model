{
  "name": "mobx-form",
  "version": "0.9.0",
  "description": "Form controller based on Mobx",
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "scripts": {
    "prepublishOnly": "npm run lint && npm run test && npm run build",
    "postpublish": "git push",
    "lint": "eslint --ignore-pattern src/*.spec.js ./src",
    "build": "babel src --out-dir lib  --compact=false --ignore=*.spec.js",
    "test-file": "mocha --compilers js:babel-register",
    "test": "npm run test-file -- src/**/*.spec.js",
    "cov-open": "opn coverage/lcov-report/index.html",
    "cov-file": "cross-env NODE_ENV=test nyc --reporter=lcov mocha",
    "coverage": "npm run cov-file -- src/**/*.spec.js && npm run cov-open",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,scss}": [
      "prettier --write",
      "git add"
    ],
    "*.js": [
      "eslint"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://NoChapter@bitbucket.org/NoChapter/mobx-form.git"
  },
  "keywords": [
    "Mobx",
    "form"
  ],
  "author": "edvardchen",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-eslint": "^7.2.3",
    "babel-plugin-istanbul": "^4.1.4",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-export-extensions": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-flow": "^6.23.0",
    "babel-register": "^6.24.1",
    "cross-env": "^5.0.1",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.0.2",
    "eslint-config-prettier": "^3.0.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.1.0",
    "flow-bin": "^0.80.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.2",
    "mocha": "^3.4.2",
    "nyc": "^11.0.3",
    "opn-cli": "^3.1.0",
    "prettier": "^1.14.2",
    "should": "^11.2.1"
  },
  "nyc": {
    "sourceMap": false,
    "instrument": false,
    "require": [
      "babel-register"
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.js"
    ]
  },
  "dependencies": {
    "mobx": "^5.1.0"
  }
}
